<h1><%= ts 'list.ing.records', :what => Sponsor.model_name.human(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Sponsor.model_name.human.titleize.s %></th>
  </tr>
<% for sponsor in @sponsors
	 path = edit_sponsor_path(sponsor) %>
  <tr>
    <td>
<%    if authorized?(path) %>
<%=     link_to h(sponsor.title).s, path %>
<%    else %>
<%=     link_to h(sponsor.title).s, sponsor_path(sponsor) %>
<%    end %>
	</td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<%= link_to ts('new.record', :what => Sponsor.model_name.human), new_sponsor_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>