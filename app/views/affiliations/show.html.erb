<b><%= ts(:for, :what => Affiliation.model_name.human.titleize, :whom => "#{Medium.human_attribute_name(:id)}#{@medium.id}") %></b>
<p>
<%= thumbnail_image_link(@medium) %>
</p>
<% sponsor = @affiliation.sponsor 
   if !sponsor.nil? %>
<%=  display_if_not_blank Sponsor.model_name.human.titleize.s, h(sponsor.title).s %>
<% end %>
<%= display_if_not_blank Organization.model_name.human.titleize.s, h(@affiliation.organization.title).s %>
<% project = @affiliation.project 
   if !project.nil? %>
<%=  display_if_not_blank Project.model_name.human.titleize.s, h(project.title).s %>
<% end %>
<p>&nbsp;<br/>
<% path = edit_medium_affiliation_path(@medium, @affiliation)
   if authorized? path %>
<%=  link_to ts('edit.this'), path %> |
<% end %>
<%= render :partial => 'persistent_links' %>
</p>