<h1><%= ts :for, :what => t('list.ing.records', :what => Source.model_name.human(:count => :many).titleize), :whom => "#{Medium.human_attribute_name(:id)}#{@medium.id}" %></h1>
<p><%= thumbnail_image_link(@medium) %></p>
<p>
<table border="1" class="normal">
  <tr>
    <th><%= Source.model_name.human.titleize.s %></th>
    <th><%= Source.human_attribute_name('shot_number').s %></th>
  </tr>
<% for media_source_association in @media_source_associations
	 path = edit_medium_source_association_path(@medium, media_source_association) %>
  <tr>
    <td><%= authorized?(path) ? link_to(h(media_source_association.source.title), path) : link_to(h(media_source_association.source.title), medium_source_association_path(@medium, media_source_association)) %>
    <td><%=h media_source_association.shot_number %></td>
  </tr>
<% end %>
</table>
</p>
<p>&nbsp;<br/>
<%= link_to(ts('associate.to', :what => t(:another => Source.model_name.human)), new_medium_source_association_path(@medium)) %> |
<%= render :partial => 'media/back_to_edit', :locals => {:anchor => 'sources'} %>
</p>