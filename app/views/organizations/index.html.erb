<h1><%= ts 'list.ing.records', :what => Organization.model_name.human(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Organization.model_name.human.titleize.s %></th>
  </tr>
<% for organization in @organizations
	 path = edit_organization_path(organization) %>
  <tr>
    <td>
<%  if authorized? path %>
<%=   link_to h(organization.title).s, path %>
<%  else %>
<%=   link_to h(organization.title).s, organization_path(organization) %>
<%  end %>
	</td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<%= link_to ts('new.record', :what => Organization.model_name.human), new_organization_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>