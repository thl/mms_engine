<% if @media.nil? && @pictures.nil? && @videos.nil? && @documents.nil? %>
     $("#primary").html("<%= escape_javascript(render(:partial => 'media/main')) %>")
<% else
     if !defined? @media.offset %>
       $("#secondary").html("<%= escape_javascript(render(:partial => 'media/index')) %>")
<%     if !element_id.blank? %>
         $("#navigation").html("<%= escape_javascript(render(:partial => @partial)) %>")
<%     end
     else 
       if @type=='Document' %>
         $("#secondary").html("<%= escape_javascript(render(:partial => 'documents/paged_index')) %>")
<%     elsif !@keyword.nil? %>
         $("#secondary").html("<%= escape_javascript(render(:partial => 'media/paged_index')) %>")
<%     else %>
         $("#secondary").html("<%= escape_javascript(render(:partial => 'media/paged_index_full')) %>")
<%     end
     end %>
<% end %>