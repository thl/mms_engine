<% thumbnail = medium.thumbnail_image
   if thumbnail.nil? %>
     <td>&nbsp;</td>
<% else
     chosen_caption = chosen_caption(medium) %>
     <td width="<%= thumbnail.width %>" height="<%= thumbnail.height %>">
<%=    link_to image_tag(thumbnail.public_filename, width: thumbnail.width, height: thumbnail.height, alt: (chosen_caption.nil? ? nil : chosen_caption.title)), medium_path(medium), class: 'media-thumb', id: "thumb-#{medium.id}", remote: true %>
     </td>
<% end %>