<h1><%= ts 'edit.ing.record', :what => Status.model_name.human.titleize %></h1>
<%= form_for(@status) do |f| %>
<%=   f.error_messages %>
      <p>
<%=     Status.human_attribute_name('title').s %><br />
<%=     f.text_field :title %>
      </p>
      <p>
<%=     Status.human_attribute_name('description').s %><br />
<%=     f.text_area :description, :rows => 5 %>
      </p>
      <p>
<%=     Status.human_attribute_name('position').s %><br />
<%=     f.text_field :position %>
      </p>
      <p>
<%=     globalized_submit_tag 'update.this' %>
      </p>
<% end %>
<% if authorized?(hash_for_statuses_path(:action => 'destroy')) %>
     <td><%= link_to 'Delete', @status, :confirm => 'Are you sure?', :method => :delete %></td> |
<% end %>
<%= link_to ts('back.to', :what => t('all.records', :what => Status.model_name.human(:count => :many))), statuses_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %>