<h1><%= ts 'list.ing.records', :what => Status.model_name.human(:count => :many).titleize %></h1>

<table border="1" class="normal">
  <tr>
    <th><%= Status.model_name.human.titleize.s %></th>
    </tr>
<% for status in @statuses
	 path = edit_status_path(status) %>
  <tr>
    <td><%= link_to(h(status.title), authorized?(path) ? path : statuses_path) %></td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% path = new_status_path
   if authorized? path %>
<%=  link_to ts('new.record', :what => Status.model_name.human), path %> |
<% end %>
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>