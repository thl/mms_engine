<%= render 'pictures/show_external' %>
<%  typescript = @medium.typescript
    url = (!typescript.nil? && typescript.content_type == 'application/pdf') ? root_url.chop + typescript.public_filename : nil
    if !url.nil? %>
      <br/>
      <p><%= link_to(ts(:get, :what => Document.model_name.human), url) %></p>
<%  end %>